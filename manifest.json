{
	"manifest_version": 2,
	"name": "ShakeToPinTab",
	"version": "1.0",
	"description": "ShakeToPinTab",
     "background": {
        "scripts": ["background.js"],
    	"persistent": false
     },
	"icons": {
		"16": "stpt_16.png",
		"32": "stpt_32.png",
		"64": "stpt_64.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "stpt_16.png",
			"32": "stpt_32.png",
			"64": "stpt_64.png"
		}
	},
	"permissions": [
		"windows",
		"tabs",
		"http://*/*",
		"https://*/*",
		"notifications",
		"contextMenus"
	]
}