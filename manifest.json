{
	"manifest_version": 2,
	"name": "HightlightToPinTab",
	"version": "1.0",
	"description": "HightlightToPinTab",
     "background": {
        "scripts": ["background.js"],
    	"persistent": false
     },
	"icons": {
		"16": "htpt_16.png",
		"32": "htpt_32.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"],
			"run_at":"document_end"
		}
	],
	"permissions": [
		"windows",
		"tabs",
		"http://*/*",
		"https://*/*",
		"notifications",
		"contextMenus"
	]
}