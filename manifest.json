{
	"manifest_version": 2,
	"name": "GlanceToPinTab",
	"version": "1.0",
	"description": "GlanceToPinTab",
     "background": {
        "scripts": ["background.js"],
    	"persistent": false
     },
	"icons": {
		"16": "gtpt_16.png",
		"32": "gtpt_32.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"],
			"run_at":"document_end"
		}
	],
	"browser_action": {
		"default_icon": {
			"16": "gtpt_16.png"
		}
	},
	"permissions": [
		"windows",
		"tabs",
		"http://*/*",
		"https://*/*",
		"notifications",
		"contextMenus"
	]
}